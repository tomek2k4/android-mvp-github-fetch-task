<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:booker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    booker:cardElevation="@dimen/list_item_elevation"
    booker:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/list_item_padding">

        <TextView
            android:id="@+id/viu_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repo_name" />

        <TextView
            android:id="@+id/viu_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repo_desc" />

    </LinearLayout>

</android.support.v7.widget.CardView>